##################################################
# MODE & ENVIRONMENT
##################################################

# paper | live
MODE=paper

# interval loop (detik)
LOOP_INTERVAL=15

# simbol trading utama
SYMBOL=BTC/USDT


##################################################
# BINANCE API
##################################################

# !!! WAJIB ISI !!!
BINANCE_API_KEY=ISI_API_KEY_ANDA
BINANCE_API_SECRET=ISI_API_SECRET_ANDA

# gunakan testnet binance (true / false)
BINANCE_TESTNET=false


##################################################
# AI SETTINGS
##################################################

# model PPO live
MODEL=ai/models/ppo_live.zip

# jumlah candle untuk state AI
AI_WINDOW=50

# online learning
ENABLE_ONLINE_LEARNING=false

# fine tune setiap N step
FINE_TUNE_EVERY=500

# jumlah step saat fine tune
FINE_TUNE_STEPS=512


##################################################
# TRADE SIZE
##################################################

# beli berdasarkan USDT
TRADE_AMOUNT_QUOTE=5

# jual berdasarkan BTC
TRADE_AMOUNT_BASE=0.0005

# maksimum posisi dalam USDT
MAX_POSITION_USDT=25


##################################################
# RISK MANAGEMENT
##################################################

INITIAL_CASH=1000

# max drawdown total (20%)
MAX_DRAWDOWN=0.20

# max trade per hari
MAX_DAILY_TRADES=20

# risk per trade (1â€“2% recommended)
RISK_PER_TRADE=0.01

# minimum risk-reward ratio
MIN_RISK_REWARD=1.5


##################################################
# STOP LOSS & TRAILING
##################################################

# ATR multiplier untuk SL
STOP_LOSS_ATR_MULT=1.5

# trailing start setelah profit ATR x
TRAIL_START_ATR=1.0

# trailing distance ATR
TRAIL_ATR_MULT=1.0


##################################################
# PROXY (OPTIONAL) & DNS FALLBACK
##################################################

# format: http://ip:port, socks5://ip:port
PROXIES=http://1.1.1.1:3128,socks5://2.2.2.2:1080
DNS_FALLBACK_IPS=18.162.165.240,18.181.3.53


##################################################
# DATABASE & LOGGING
##################################################

# sqlite trades db
TRADES_DB=data/trades.db

# max error sebelum bot exit (biar supervisor restart)
MAX_ERRORS_BEFORE_RESTART=10


##################################################
# ADVANCED (BIARKAN DEFAULT)
##################################################

# timezone (opsional)
TZ=UTC

# debug log
DEBUG=true


##################################################
# ENSEMBLE AI MODELS
##################################################

PPO_TREND_MODEL=ai/models/ppo_trend.zip
PPO_MEAN_MODEL=ai/models/ppo_mean.zip
LSTM_MODEL=ai/models/lstm_price.pt
